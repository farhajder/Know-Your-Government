<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollIndicators="top|right"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:fadeScrollbars="true"
    android:fadingEdge="vertical">

    <TextView
        android:layout_width="367dp"
        android:layout_height="24dp"
        android:id="@+id/ofcActBannerText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:background="@color/colorPurple"
        android:textColor="@color/colorWhite"/>

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:saveEnabled="true"
        android:scrollIndicators="top|right"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ofcActBannerText">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/officalActContraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlack">

            <TextView
                android:id="@+id/ofcAbtTextView"
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                app:layout_constraintHorizontal_bias="0.038"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="0dp" />

            <ImageView
                android:id="@+id/ofcImgView"
                android:layout_width="151dp"
                android:layout_height="148dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="24dp"
                android:scaleType="center"
                app:layout_constraintHorizontal_bias="0.447"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ofcAbtTextView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:text="Address: "
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textStyle="normal|bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ofcImgView" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:text="Phone: "
                android:textColor="@color/colorWhite"
                android:textStyle="normal|bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ofcAddTextView" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:text="Email: "
                android:textColor="@color/colorWhite"
                android:textStyle="normal|bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Website: "
                android:textColor="@color/colorWhite"
                android:textStyle="normal|bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/ofcAddTextView"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorWhite"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/textView4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ofcImgView" />

            <TextView
                android:id="@+id/ofcPhoneNumTextView"
                android:layout_width="230dp"
                android:layout_height="31dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorWhite"
                app:layout_constraintLeft_toRightOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/ofcAddTextView" />

            <TextView
                android:id="@+id/ofcEmailTextView"
                android:layout_width="228dp"
                android:layout_height="28dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorWhite"
                app:layout_constraintLeft_toRightOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/ofcPhoneNumTextView" />

            <TextView
                android:id="@+id/ofcWebSiteTectView"
                android:layout_width="233dp"
                android:layout_height="20dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorWhite"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/textView12"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ofcEmailTextView" />

            <ImageView
                android:id="@+id/googleIconImageView"
                android:layout_width="27dp"
                android:layout_height="32dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ofcWebSiteTectView"
                app:srcCompat="@drawable/googleplus" />

            <ImageView
                android:id="@+id/facebookIconImageView"
                android:layout_width="27dp"
                android:layout_height="32dp"
                android:layout_marginStart="56dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="24dp"
                app:layout_constraintLeft_toRightOf="@+id/googleIconImageView"
                app:layout_constraintTop_toBottomOf="@+id/ofcWebSiteTectView"
                app:srcCompat="@drawable/facebook" />

            <ImageView
                android:id="@+id/twitterIconImageView"
                android:layout_width="27dp"
                android:layout_height="32dp"
                android:layout_marginStart="56dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="24dp"
                app:layout_constraintLeft_toRightOf="@+id/facebookIconImageView"
                app:layout_constraintTop_toBottomOf="@+id/ofcWebSiteTectView"
                app:srcCompat="@drawable/twitter" />

            <ImageView
                android:id="@+id/youtubeIconImageView"
                android:layout_width="27dp"
                android:layout_height="32dp"
                android:layout_marginStart="56dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="24dp"
                app:layout_constraintLeft_toRightOf="@+id/twitterIconImageView"
                app:layout_constraintTop_toBottomOf="@+id/ofcWebSiteTectView"
                app:srcCompat="@drawable/youtube" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>