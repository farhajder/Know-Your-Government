<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollIndicators="top|right"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:fadeScrollbars="true"
    android:fadingEdge="vertical">

    <TextView
        android:id="@+id/ofcActBannerText"
        android:layout_width="589dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPurple"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:saveEnabled="true"
        android:scrollIndicators="top|right"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ofcActBannerText"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"

        android:scrollbars="vertical"
        app:layout_constraintHorizontal_bias="0.75">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/officalActContraint"
            android:background="@color/colorBlack">

            <TextView
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="122dp"
                android:id="@+id/ofcAbtTextView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                app:layout_constraintHorizontal_bias="0.25" />

            <ImageView
                android:id="@+id/ofcImgView"
                android:layout_width="151dp"
                android:layout_height="148dp"
                android:scaleType="center"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.92"
                app:layout_constraintTop_toTopOf="@+id/ofcAddTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:text="Address: "
                android:textStyle="normal|bold"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/ofcAbtTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:text="Phone: "
                android:textStyle="normal|bold"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/ofcAddTextView"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:text="Email: "
                android:textStyle="normal|bold"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website: "
                android:textStyle="normal|bold"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/textView12"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:id="@+id/ofcAddTextView"
                android:layout_marginStart="24dp"
                app:layout_constraintLeft_toRightOf="@+id/textView4"
                android:layout_marginLeft="24dp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/ofcAbtTextView"
                app:layout_constraintRight_toLeftOf="@+id/ofcImgView"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.2" />

            <TextView
                android:layout_width="230dp"
                android:layout_height="31dp"
                android:id="@+id/ofcPhoneNumTextView"
                android:layout_marginStart="32dp"
                app:layout_constraintLeft_toRightOf="@+id/textView5"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/ofcAddTextView"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:layout_width="228dp"
                android:layout_height="28dp"
                android:id="@+id/ofcEmailTextView"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/ofcPhoneNumTextView"
                android:layout_marginStart="40dp"
                app:layout_constraintLeft_toRightOf="@+id/textView6"
                android:layout_marginLeft="40dp"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:layout_width="233dp"
                android:layout_height="20dp"
                android:id="@+id/ofcWebSiteTectView"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/ofcEmailTextView"
                android:layout_marginStart="32dp"
                app:layout_constraintLeft_toRightOf="@+id/textView12"
                android:layout_marginLeft="32dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:textColor="@color/colorWhite"/>

            <ImageView
                android:layout_width="27dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/googleplus"
                android:id="@+id/googleIconImageView"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="56dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/ofcWebSiteTectView" />

            <ImageView
                android:layout_width="27dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/facebook"
                android:id="@+id/facebookIconImageView"
                android:layout_marginStart="128dp"
                app:layout_constraintLeft_toRightOf="@+id/googleIconImageView"
                android:layout_marginLeft="128dp"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/ofcWebSiteTectView" />

            <ImageView
                android:layout_width="27dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/twitter"
                android:id="@+id/twitterIconImageView"
                android:layout_marginStart="144dp"
                app:layout_constraintLeft_toRightOf="@+id/facebookIconImageView"
                android:layout_marginLeft="144dp"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/ofcWebSiteTectView" />

            <ImageView
                android:layout_width="27dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/youtube"
                android:id="@+id/youtubeIconImageView"
                android:layout_marginStart="104dp"
                app:layout_constraintLeft_toRightOf="@+id/twitterIconImageView"
                android:layout_marginLeft="104dp"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/ofcWebSiteTectView"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>